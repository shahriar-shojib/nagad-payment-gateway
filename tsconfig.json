{
	"compilerOptions": {
		"target": "ES2020",
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true,
		"checkJs": false,
		"alwaysStrict": true,
		"strict": true,
		"strictNullChecks": true,
		"incremental": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"module": "ES2020",
	},
	"include": ["src/**/*.ts"],
	"exclude": ["test/**/*.js", "dist/**/*.js"]
}
